@model IEnumerable<TravelExpertsData.BookingDetail>

@{
    ViewData["Title"] = "Index";
    int price = 0;
}

<h1 class="protest-riot-regular mt-5">Booking Detail</h1>
<a id="booking" asp-controller="TravelProduct" asp-action="Bookings" class="fs-1 text-start text-decoration-none"><i class="fa-solid fa-arrow-left"></i> <span class="">Back to Bookings</span></a>

<table class="table table-responsive table-striped table-hover table-sm">
    <thead>
        <tr>
            @*
            Booking Detail
            *@
            <th>
                Description @*Description*@
            </th>
            <th>
                Destination @*Destination*@
            </th>
            <th>
                Region @*RegionId*@
            </th>
            <th>
                Class @*ClassId *@
            </th>
            <th>
                Start of Trip @*TripStart*@
            </th>
            <th>
                End of Trip @*TripEnd*@
            </th>
            <th>
                Price @*BasePrice*@
            </th>
            <th>
                Commission@*AgencyCommission*@
            </th>
            <th>
                Fees @*FeeId*@
            </th>
            <th>
                Total @*Total Price (BasePrice + AgencyCommission + Fees)*@
            </th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var item in Model)
        {
            <tr>
                @* <td>
            @Html.DisplayFor(modelItem => item.MovieId)
            </td> *@
                <td>
                    @if (string.IsNullOrEmpty(item.Description))@*Does not work*@
                    {
                        <text>No description.</text>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Description)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @if (item.RegionId == "AFR")
                    {
                        <text>Africa</text>
                    }
                    else if (item.RegionId == "ANZ")
                    {
                        <text>Australia & New Zealand</text>
                    }
                    else if (item.RegionId == "ASIA")
                    {
                        <text>Asia</text>
                    }
                    else if (item.RegionId == "EU")
                    {
                        <text>Europe & United Kingdom</text>
                    }
                    else if (item.RegionId == "MEAST")
                    {
                        <text>Middle East</text>
                    }
                    else if (item.RegionId == "MED")
                    {
                        <text>Mediterranean</text>
                    }
                    else if (item.RegionId == "NA")
                    {
                        <text>North America</text>
                    }
                    else if (item.RegionId == "OTHR")
                    {
                        <text>Other</text>
                    }
                    else if (item.RegionId == "SA")
                    {
                        <text>South America</text>
                    }
                    else if (item.RegionId == "SP")
                    {
                        <text>South Pacific</text>
                    }
                    else
                    {
                        <text>Unknown</text>
                    }

                </td>
                <td>
                    @if (item.ClassId == "BSN")
                    {
                        <text>Business Class</text>
                    }
                    else if (item.ClassId == "DBL")
                    {
                        <text>Double</text>
                    }
                    else if (item.ClassId == "DLX")
                    {
                        <text>Delux</text>
                    }
                    else if (item.ClassId == "ECN")
                    {
                        <text>Economy</text>
                    }
                    else if (item.ClassId == "FST")
                    {
                        <text>First Class</text>
                    }
                    else if (item.ClassId == "INT")
                    {
                        <text>Interior</text>
                    }
                    else if (item.ClassId == "NA")
                    {
                        <text>Not Applicable</text>
                    }
                    else if (item.ClassId == "OCNV")
                    {
                        <text>Ocean View</text>
                    }
                    else if (item.ClassId == "SNG")
                    {
                        <text>Single</text>
                    }
                    else
                    {
                        <text>Unknown</text>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TripStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TripEnd)
                </td>
                <td>
                    <!--BasePrice-->
                    $@Html.DisplayFor(modelItem => item.BasePrice)
                </td>
                <td>
                    <!--Agency Commision-->
                    $@Html.DisplayFor(modelItem => item.AgencyCommission)
                </td>
                <td>
                    <!-- FeedId price-->
                    @if (item.FeeId == "BK")
                    {
                        <text>$25</text>
                    }
                    else if (item.FeeId == "CH")
                    {
                        <text>$15</text>
                    }
                    else if (item.FeeId == "GR")
                    {
                        <text>$100</text>
                    }
                    else if (item.FeeId == "NC")
                    {
                        <text>$0</text>
                    }
                    else if (item.FeeId == "NSF")
                    {
                        <text>$25</text>
                    }
                    else if (item.FeeId == "RF")
                    {
                        <text>$25</text>
                    }
                    else if (item.FeeId == "RS")
                    {
                        <text>$50</text>
                    }
                </td>
                <td>
                    @if (item.FeeId == "BK")
                    {
                        price = 25;
                    }
                    else if (item.FeeId == "CH")
                    {
                        price = 15;
                    }
                    else if (item.FeeId == "GR")
                    {
                        price = 100;
                    }
                    else if (item.FeeId == "NC")
                    {
                        price = 0;
                    }
                    else if (item.FeeId == "NSF")
                    {
                        price = 25;
                    }
                    else if (item.FeeId == "RF")
                    {
                        price = 25;
                    }
                    else if (item.FeeId == "RS")
                    {
                        price = 50;
                    }
                    $@((item.BasePrice.GetValueOrDefault() + item.AgencyCommission.GetValueOrDefault() + price).ToString("F2"))
                    
                </td>
            </tr>
        }
    </tbody>
</table>

