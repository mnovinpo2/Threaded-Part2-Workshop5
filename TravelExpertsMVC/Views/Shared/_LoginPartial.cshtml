<ul class="navbar-nav ml-auto">
    @if (User.Identity.IsAuthenticated)
    {var firstName = User.Claims.FirstOrDefault(c => c.Type == "FirstName")?.Value; 
        <li class="nav-item hover">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index" title="Welcome">
                Welcome @firstName
            </a>
        </li> 
        <li class="nav-item hover">
            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Profile" title="Welcome">
                Profile
            </a>
        </li>
        <li class="nav-item hover">
            <form class="form-inline" asp-controller="Account" asp-action="Logout"
                  asp-route-returnUrl=@Url.Action("Home", "Index")>
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item hover">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item hover">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
    }
</ul>